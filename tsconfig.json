{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "experimentalDecorators": true, // Enable decorators
    "emitDecoratorMetadata": true, // Enable metadata for Inversify
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(client)/auth/sign-in/forgot-password",
    "commitlint.config.ts",
    "src/features/setting/presentation/module/account/components/AccountDetailPage.tss",
    "next-auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
